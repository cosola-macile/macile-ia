mixin nav_item(page)
  li
    a(href="/teacher_development_institute/content/#{ page }") #{ page }

mixin nav_list(type, modifier)
  ul(class="nav nav-list nav-#{ modifier }")
    for page in type
      +nav_item(page)


h3. Sessions

for year in ['2008', '2009', '2010', '2011', '2012', '2013', '2014']
  ul(class="nav nav-list nav-sessions")
    +nav_item(year)
