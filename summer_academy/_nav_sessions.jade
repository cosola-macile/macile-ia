mixin nav_item(page)
  li
    a(href="/summer_academy/contents/#{ page }") #{ page }

mixin nav_list(type, modifier)
  ul(class="nav nav-list nav-#{ modifier }")
    for page in type
      +nav_item(page)


h3. Sessions

for year in ['2007', '2008', '2009', '2010']
  ul(class="nav nav-list nav-sessions")
    +nav_item(year)
